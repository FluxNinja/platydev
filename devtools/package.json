{
  "name": "@platyplus/devtools",
  "private": false,
  "version": "0.3.0",
  "description": "Platy DevTools",
  "author": "Pierre-Louis Mercereau <24897252+plmercereau@users.noreply.github.com>",
  "homepage": "https://platy.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/platyplus/platyplus.git",
    "directory": "devtools/cli"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "platy": "./dist/cli/index.js"
  },
  "scripts": {
    "start": "NODE_ENV=development ts-node -r tsconfig-paths/register src/cli/index.ts",
    "prepublish": "yarn run build",
    "build": "yarn run clean && tsc -p tsconfig.build.json",
    "postbuild": "yarn run copy-files",
    "copy-files": "cpy  'templates/**/*' '!templates/*.ts' ../dist/ --cwd=src --parents",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@platyplus/fs": "^0.1.1",
    "@platyplus/lerna": "^0.0.7",
    "@types/conventional-changelog": "^3.1.0",
    "axios": "^0.20.0",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.2",
    "conventional-changelog-angular": "^5.0.12",
    "conventional-recommended-bump": "^6.0.11",
    "deepmerge": "^4.2.2",
    "git-config": "^0.0.7",
    "git-config-path": "^2.0.0",
    "handlebars": "^4.7.6",
    "inquirer": "^7.3.3",
    "isomorphic-git": "^1.8.0",
    "object-path": "^0.11.4",
    "parse-git-config": "^3.0.0",
    "semver": "^7.3.2",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@types/conventional-changelog": "^3.1.0",
    "@types/conventional-recommended-bump": "^6.0.0",
    "@types/git-config": "^0.0.29",
    "@types/git-config-path": "^2.0.0",
    "@types/inquirer": "^7.3.1",
    "@types/object-path": "^0.11.0",
    "@types/parse-git-config": "^3.0.0",
    "@types/semver": "7.3.2",
    "@types/yargs": "^15.0.7",
    "cpy-cli": "^3.1.1",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^3.9.0"
  },
  "gitHead": "654611248f4f6adb5dfab4183e49029e74a5be18"
}
