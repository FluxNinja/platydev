{
  "name": "@platyplus/devtools",
  "private": false,
  "version": "1.0.0",
  "description": "Platyplus DevTools",
  "author": "Pierre-Louis Mercereau <24897252+plmercereau@users.noreply.github.com>",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/platyplus/platyplus.git",
    "directory": "packages/devtools"
  },
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "pdt": "./dist/index.js"
  },
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "prepublish": "yarn run build",
    "build": "yarn run clean && tsc -p tsconfig.build.json",
    "postbuild": "yarn run copy-files",
    "copy-files": "copyfiles -u 1 src/templates/**/* dist/",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@platyplus/lerna": "*",
    "chokidar": "^3.4.2",
    "handlebars": "^4.7.6",
    "merge-deep": "^3.0.2",
    "object-path": "^0.11.4",
    "tmp": "^0.2.1",
    "yaml": "^1.10.0",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@types/merge-deep": "^3.0.0",
    "@types/object-path": "^0.11.0",
    "@types/tmp": "^0.2.0",
    "@types/yargs": "^15.0.5",
    "copyfiles": "^2.3.0",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^3.9.0"
  }
}
