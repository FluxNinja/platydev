{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // TODO merge options into global tsconfig
    "types": ["quasar", "webpack-env"],
    "baseUrl": ".",
    "paths": {
      "app/*": ["*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "boot/*": ["src/boot/*"],
      "src/*": ["src/*"],

      "@platyplus/*": ["../../packages/*/src"],
      "@platyplus/humanitarian-icons/*": [
        "../../packages/humanitarian-icons/dist/*"
      ],
      "*": ["../../types/*"]
    }
  },

  "exclude": ["/dist", ".quasar", "node_modules"]
}
